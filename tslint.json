{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": false,
    "arrow-parens": false,
    "no-shadowed-variable": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-multi-spaces": {
      "exceptions": { "ImportDeclaration": true }
    },
  }
}
